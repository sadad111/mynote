<% include header %>

        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <h1 class="header blue lighter">
                  发表笔记
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">

                <!-- the wysiwyg form -->
                <form method="POST" id="myform">
                    <div class="form-group">
                        <input type="text" class="form-control" width="80%" name="title" placeholder="标题">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="tag" placeholder="标签">
                    </div>

                    <div id="editor" class="wysiwyg-editor"></div>
                    <input type="hidden" name="content" />

                    <div class="form-actions align-right clearfix">
                        <button type="reset" class="pull-left btn">
                            <i class="ace-icon fa fa-retweet bigger-110"></i>
                            重置
                        </button>

                        <button type="submit" class="btn btn-primary pull-right">
                            <i class="ace-icon fa fa-check bigger-110"></i>
                            提交
                        </button>
                    </div>
                </form>

            </div>
        </div>









<% include footer %>